<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_back"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".TermsAndConditions">

    <ScrollView
        android:id="@+id/scrollViewTermsAndConditions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="100dp"
        android:layout_marginBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headerTermsAndConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:lineSpacingExtra="8sp"
                android:text="Terms and Conditions"
                android:textAppearance="@style/Headers"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/bodyTermsAndConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/termsUpdated"
                android:textAlignment="center"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/footerTermsAndConditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Do you accept the Terms and Conditions?"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/yesBtn"
                style="@style/Buttons"
                android:layout_weight="2"
                android:background="@drawable/button_back2"
                android:layout_margin="5dp"
                android:text="Yes" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/noBtn"
                style="@style/Buttons"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@drawable/button_back2"
                android:text="No" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>